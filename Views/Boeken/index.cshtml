@model IEnumerable<BoekenListViewModel>

    <style>
        th {
            width: 300px;
        }
    </style>
    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Boeken" asp-action="Create">Add Book</a>
    <h1>Nieuwe Boeken</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model.Where(x => x.PublishDate.Year == DateTime.Now.Year))
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
            </tr>
        }
        </tbody>
    </table>
    <h1>Oude Boeken</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model.Where(x => x.PublishDate.Year != DateTime.Now.Year))
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
            </tr>
        }
        </tbody>
    </table>
